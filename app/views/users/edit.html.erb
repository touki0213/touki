<% provide(:title,"Edit user") %>
<h1>Update your profile</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f|%>
            <%= render 'shared/error_messages'%>

            <%= f.label :name%>
            <%= f.text_field :name,class:'forn-control'%>

            <%= f.label :emall%>
            <%= f.text_field :emall,class:'forn-control'%>

            <%= f.label :password%>
            <%= f.text_field :password,class:'forn-control'%>

            <%= f.label :password_confirmation,"Confirmation"%>
            <%= f.text_field :password_confirmation,class:'forn-control'%>

            <%= f.submit "Save changes",class: "btn btn-primary"%>
        <%end%>

        <div class="gravatar_edit">
            <%= gravatar_for @user %>
            <a href="http://gravatar.com/emalls" target="_blank">change</a>
        </div>
    </div>
</div>